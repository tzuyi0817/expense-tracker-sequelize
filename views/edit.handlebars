<div class="container mt-5">
  <div class="row">
    <div class="col-md-6 m-auto">
      <h4 class="text-center">請編輯你的支出記錄</h4>
      <form action="/record/{{{record.id}}}?_method=PUT" method="POST">
        <div class="form-group ">
          <label for="name">名稱*：</label>
          <input type="text" id="name" name="name" class="form-control" value="{{{record.name}}}">
        </div>
        <div class="form-group ">
          <label for="date">日期*：</label>
          <input type="text" id="date" name="date" value="{{{record.date}}}" class="form-control">
        </div>
        <div class="input-group mb-3">
          <label for="category">類別*：</label>
          <div style="display: block; width: 100%">
            <select name="category" class="custom-select">
              <option value="fas fa-home" {{#if optionASelected}} selected {{/if}}>家居物業</option>
              <option value="fas fa-shuttle-van" {{#if optionBSelected}} selected {{/if}}>交通出行</option>
              <option value="fas fa-grin-beam" {{#if optionCSelected}} selected {{/if}}>休閒娛樂</option>
              <option value="fas fa-utensils" {{#if optionDSelected}} selected {{/if}}>餐飲食品</option>
              <option value="fas fa-pen" {{#if optionESelected}} selected {{/if}}>其他</option>
            </select>
          </div>
        </div>
        <div class="form-group">
          <label for="amount">金額*：</label>
          <input type="text" id="amount" name="amount" class="form-control" value="{{{record.amount}}}">
        </div>
        <button type="submit" class="btn btn-outline-danger btn-block mt-5">修改</button>
      </form>
    </div>
  </div>
</div>